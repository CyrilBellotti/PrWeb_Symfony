{% extends "base.html.twig" %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/app/css/profil.css') }}">
{% endblock %}
{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
{% block title %}
    User: {{ user }}
{% endblock %}
{% block body %}
<h1>Profil</h1>
    {% if avatar %}
        <img src="{{ asset(avatar) }}"/>
    {% endif %}
    <div class="container">
        <div class="row">
            <!-- left column -->
            <div class="col-md-4 col-sm-6 col-xs-12 avatar">
                <div class="text-center">
                    <img src="{{ asset(avatar) }}">
                        <h6>Changer d'avatar</h6>
                        <input type="file" id="avatar" class="text-center center-block well well-sm">
                </div>
            </div>
            <!-- edit form column -->
            <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
                <h3>Informations personnels</h3>
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Prenom :</label>
                        <input type='text' value="{{ firstname }}" disabled id='Nom'>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Nom :</label>
                        <input type='text' value="{{ lastname }}" disabled id='Nom'>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Role :</label>
                        <input type='text' value="{{ role }}" disabled id='Nom'>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Mot de passe actuelle :</label>
                        <div class="col-md-5">
                            <input class="form-control" value="" type="password">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Nouveau mot de passe :</label>
                        <div class="col-md-5">
                            <input class="form-control" value="" type="password">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Confirmer le mot de passe :</label>
                        <div class="col-md-5">
                            <input class="form-control" value="" type="password">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-8">
                            <input class="btn btn-primary" id="btn_sauvegarder" value="Sauvegarder" type="submit">
                            <span></span>
                            <input class="btn btn-default" value="Annuler" type="submit">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% endif %}
