{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/app/css/style_rectangle.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/app/css/style_panier.css') }}">
{% endblock %}

{% block body %}

    <div class="container-fluid body">
        <div class="container">
            <div class="row">
                <div id="main-title">
                    <h1>Mon panier</h1>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                    <div class="box">
                        <div class="info">



                        {% for orderDetail in order.purchaseDetails %}
                            <div class="row">
                                <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9 text-section">
                                    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 text-section">
                                        <p><strong>{{ orderDetail.product.name }}</strong></p>
                                    </div>
                                    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 text-section">
                                        <p>Prix : {{ orderDetail.unitprice }} €/unité</p>
                                    </div>
                                    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 text-section">
                                        <p>Quantité : {{ orderDetail.quantity }}</p>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="col-xs-8 col-sm-4 col-md-4 col-lg-4">
                    <div class="box">
                        <div class="info">
                            <div class="row text-center">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <h4>Total : <strong>{{ order.amount }} €</strong></h4>
                                </div>
                            </div>
                            <div class="row" id="btn-acheter">
                                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                    <button type="button" class="btn btn-success btn-block">Acheter</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}