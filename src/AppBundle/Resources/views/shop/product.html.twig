{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/app/css/style_rectangle.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/app/css/style_produit.css') }}">
{% endblock %}

{% block body %}

    <div class="container-fluid body">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="box">
                        <div class="info">
                            <h4>{{ productname }}</h4>
                            <form method="post" action="">
                                <input type="hidden" name="id" value="#">
                                <div class="info" id="btn-inscription">
                                    <input class="btn" type="submit" value="Supprimer">
                                </div>
                            </form>

                            {% if product %}
                            <div class="imageProduct">
                            {% if product.image %}
                                <img class="img-product" src="{{ asset(product.image.path|e) }} " alt=" {{ product.image.path|e }} ">
                            {% else %}
                                <p>Pas d'image disponible</p>
                            {% endif %}

                            </div>
                                <hr>
                                <div class="prix"><p><strong>Coût du produit : </strong>{{ product.price }} €</p></div>
                                <div class="productDescription"><p><strong>Description : </strong></p><p>{{ product.description }}</p></div>
                                <hr>

                                <div class="" style="display:flex">
                                <form method="post" action="{{ path('buy') }}">
                                <label>
                                    <p>Quantité :</p>
                                    <input type="number" name="quantity" class="quantity" min="1"/>
                                </label>
                                <div class="info">
                                    <input type="hidden" name="productid" value="{{ product.id }}">
                                <input type="submit" class="btn" value="Ajouter au panier"/>
                                </div>
                                </form>
                            </div>
                            {% endif %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}